###create a vcf for each group where the .txt file has a sample name on each line
bcftools view CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_1nonref.recode.vcf -S Russia_Mong.txt --min-ac=1 -O z -o CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Russia_Mong.vcf.gz
bcftools view CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_1nonref.recode.vcf -S South_noIndia.txt --min-ac=1 -O z -o CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_South.vcf.gz
bcftools view CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_1nonref.recode.vcf -S Kyrgyzstan.txt --min-ac=1 -O z -o CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Kyrgyzstan.vcf.gz
bcftools view CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_1nonref.recode.vcf -S South_noKyrg.txt --min-ac=1 -O z -o CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_South_noKyrgvcf.gz
bcftools view CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_NoIndia_1nonRef.recode.vcf -S Russia_Mong_subsampled.txt --min-ac=1 -O z -o CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Russia_Mong_subsampled.vcf.gz


bcftools index CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Russia_Mong.vcf.gz
bcftools index CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_South_noKyrg.vcf.gz
bcftools index CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_South.vcf.gz
bcftools index CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Kyrgyzstan.vcf.gz
bcftools index CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Russia_Mong_subsampled.vcf.gz

bcftools isec -n +2 CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Russia_Mong.vcf.gz CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_South.vcf.gz -p North_South_compare
bcftools isec -n +1 CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Russia_Mong.vcf.gz CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_South.vcf.gz -p North_South_compare_n1
bcftools isec CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Russia_Mong.vcf.gz CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_South.vcf.gz -p North_South_compare_noN

bcftools isec -n~111 -c all CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Russia_Mong_subsampled.vcf.gz CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_Kyrgyzstan.vcf.gz CombinedAnnotations_wHeaderD_filtered_pass_1nonref_90maxmis_IndRename_no10x_noIndia_South_noKyrg.vcf.gz -p NKS
